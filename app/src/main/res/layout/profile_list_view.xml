<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_lv_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="5dp"
        android:src="@drawable/ic_phone_white_24dp_2x"
        app:civ_circle_background_color="@color/bgBottomNavigation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_lv_text1"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/profile_lv_image"
        android:text="This is text 1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_lv_text2"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/profile_lv_image"
        android:text="This is text 2"
        android:layout_below="@id/profile_lv_text1"
        android:textStyle="bold"
        android:textColor="@color/bgBottomNavigation"/>

    <TextView
        android:id="@+id/profile_lv_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_lv_text2"
        android:layout_toEndOf="@+id/profile_lv_image"
        android:text="This is text 3"
        android:textSize="18sp"
        android:visibility="invisible" />
</RelativeLayout>
