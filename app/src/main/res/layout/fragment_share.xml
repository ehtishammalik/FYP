<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_search">

    <TextView
        android:id="@+id/create_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:textSize="30sp"
        android:text="From"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:paddingLeft="100dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/create_from"
        android:id="@+id/create_line1"/>

    <TextView
        android:id="@+id/create_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create_line1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:text="To"
        android:textSize="30sp"
        android:paddingLeft="100dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/create_to"
        android:id="@+id/create_line2"/>

    <TextView
        android:id="@+id/create_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_line2"
        android:layout_marginTop="11dp"
        android:text="Select Date"
        android:textSize="20sp"
        tools:text="Select Date"
        android:layout_marginStart="12dp"
        android:paddingLeft="100dp"/>

    <TextView
        android:id="@+id/create_return_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_when"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:paddingLeft="100dp"
        android:text="Select Time"
        android:textSize="20sp"
        android:visibility="gone"
        tools:text="Select Time" />


    <Button
        android:id="@+id/btn_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_return_time"
        android:layout_marginBottom="32dp"
        android:background="@color/bgBottomNavigation"
        android:shadowColor="@color/bgBottomNavigation"
        android:text="Create"
        android:layout_margin="20dp"
        android:textColor="@color/cardview_light_background" />


</RelativeLayout>
