<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_search">

    <TextView
        android:id="@+id/search_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:textSize="30sp"
        android:text="From"
        android:layout_marginStart="12dp"
        android:textStyle="bold"
        android:paddingLeft="50dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/search_from"
        android:id="@+id/search_line1"/>

    <TextView
        android:id="@+id/search_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_line1"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:text="To"
        android:textSize="30sp"
        android:paddingLeft="50dp"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/search_to"
        android:id="@+id/search_line2"/>

    <TextView
        android:id="@+id/search_when"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_line2"
        android:layout_marginTop="11dp"
        android:text="Select Date"
        android:textSize="20sp"
        tools:text="Select Date"
        android:layout_margin="12dp"
        android:paddingLeft="50dp"/>

    <TextView
        android:id="@+id/search_return_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_when"
        android:layout_marginTop="11dp"
        android:text="Select Time"
        android:textSize="20sp"
        tools:text="Select Time"
        android:layout_margin="12dp"
        android:paddingLeft="50dp"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/search_return_time"
        android:layout_alignStart="@+id/search_return_time"
        android:layout_below="@+id/search_return_time"
        android:layout_marginTop="28dp"
        android:background="@color/bgBottomNavigation"
        android:shadowColor="@color/bgBottomNavigation"
        android:text="Search"
        android:layout_marginStart="50dp"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>
